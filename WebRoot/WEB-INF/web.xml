<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <distributable/>
  <context-param>
    <description>Spring配置文件</description>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:spring/applicationContext*.xml</param-value>
  </context-param>
  <context-param>
    <description>设置Spring加载器</description>
    <param-name>contextInitializerClasses</param-name>
    <param-value>com.duker.mygift.common.support.spring.XmlWebApplicationContextInitializer</param-value>
  </context-param>
  <resource-ref>
    <description>DataSource Reference</description>
    <res-ref-name>jdbc/mygift</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
  <listener>
    <description>解决struts,quartz,OpenSessionInViewFilter缓冲泄露</description>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <listener>
    <description>系统初始化监听器</description>
    <listener-class>com.duker.mygift.common.support.spring.InitializationListener</listener-class>
  </listener>
  <listener>
    <description>web上下文监听器</description>
    <listener-class>com.duker.mygift.listener.ContextPathListener</listener-class>
  </listener>
  <filter>
    <description>编码集过滤器</description>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.duker.mygift.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>*.action</url-pattern>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <description>web上下文过滤器</description>
    <filter-name>contextPathFilter</filter-name>
    <filter-class>com.duker.mygift.filter.ContextPathFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>contextPathFilter</filter-name>
    <url-pattern>*.action</url-pattern>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <description>一个http请求打开一个hibernate session</description>
    <filter-name>hibernateFilter</filter-name>
    <filter-class>com.duker.mygift.filter.OpenSessionInViewFilter</filter-class>
    <init-param>
      <description>spring中配置的hiernate sessionFactory名字</description>
      <param-name>sessionFactoryBeanName</param-name>
      <param-value>sessionFactory</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>*.action</url-pattern>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <description>准备struts2标签等</description>
    <filter-name>struts2prepare</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2prepare</filter-name>
    <url-pattern>*.action</url-pattern>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>/nginx_status</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>
  <filter>
    <description>用户权限过滤器</description>
    <filter-name>rightFilter</filter-name>
    <filter-class>com.duker.mygift.filter.RightFilter</filter-class>
    <init-param>
      <param-name>needLoginFilterList</param-name>
      <param-value>/index.jsp,/logout.action,/finduser.action,/updateuser.action,/modifypwd.jsp,/modifypwd.action</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>rightFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
    <url-pattern>/student/*</url-pattern>
    <url-pattern>/teacher/*</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/logout.action</url-pattern>
    <url-pattern>/finduser.action</url-pattern>
    <url-pattern>/updateuser.action</url-pattern>
    <url-pattern>/modifypwd.jsp</url-pattern>
    <url-pattern>/modifypwd.action</url-pattern>
  </filter-mapping>
  <filter>
    <description>struts2核心控制器</description>
    <filter-name>struts2excute</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2excute</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <servlet>
    <description>登录完毕后跳回上次访问的页面</description>
    <display-name>refreshServlet</display-name>
    <servlet-name>refreshServlet</servlet-name>
    <servlet-class>com.duker.mygift.servlet.RefreshServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>refreshServlet</servlet-name>
    <url-pattern>/refresh</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>验证码</description>
    <display-name>验证码</display-name>
    <servlet-name>RandImage</servlet-name>
    <servlet-class>com.duker.mygift.servlet.RandImageServlet</servlet-class>
    <init-param>
      <description>要生成的字符个数</description>
      <param-name>charCount</param-name>
      <param-value>4</param-value>
    </init-param>
    <init-param>
      <description>干扰线条数</description>
      <param-name>lineCount</param-name>
      <param-value>10</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>RandImage</servlet-name>
    <url-pattern>/randimage</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
      <deferred-syntax-allowed-as-literal>true</deferred-syntax-allowed-as-literal>
      <trim-directive-whitespaces>true</trim-directive-whitespaces>
    </jsp-property-group>
  </jsp-config>
  <session-config>
    <session-timeout>1440</session-timeout>
    <cookie-config>
      <max-age>86400</max-age>
    </cookie-config>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
  </error-page>
</web-app>